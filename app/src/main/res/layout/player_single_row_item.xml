<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:player_card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    player_card:cardElevation="4dp"
    player_card:cardCornerRadius="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    player_card:cardBackgroundColor="@color/offWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/gradient_background_lighttan_darktan">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/player_card_tv_playername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:textColor="@color/signIn_lightGreen"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/player_card_tv_companyrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/signIn_lightGreen"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:id="@+id/player_single_row_tvWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wins : "
                android:textColor="@color/text_dark_tan"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/player_single_row_tvLosses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Losses :"
                android:textColor="@color/text_dark_tan"
                android:layout_margin="4dp"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>