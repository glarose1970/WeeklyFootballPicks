<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:player_card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    player_card:cardElevation="4dp"
    player_card:cardCornerRadius="8dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/single_matchup_awayTeam_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/matchup_single_row_item_iv_awayTeamLogo"
                android:src="@drawable/ic_players"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/matchup_single_row_item_tvAwayTeamRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="Record"/>

                <TextView
                    android:id="@+id/matchup_single_row_item_tvAwayTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Name"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/matchup_single_row_item_tvAwayTeamScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="score"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/single_matchup_homeTeam_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/matchup_single_row_item_iv_homeTeamLogo"
                android:src="@drawable/ic_players"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/matchup_single_row_item_tvHomeTeamRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="Record"/>

                <TextView
                    android:id="@+id/matchup_single_row_item_tvHomeTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Name"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/matchup_single_row_item_tvHomeScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="score"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>